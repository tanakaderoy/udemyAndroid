<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView" android:textSize="60sp"/>
    <Button
            android:text="Add 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="78dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="470dp"
            app:layout_constraintEnd_toStartOf="@+id/resetButton" android:layout_marginEnd="79dp"
            android:onClick="addOne"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="469dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="79dp"
            android:onClick="reset"/>

</androidx.constraintlayout.widget.ConstraintLayout>